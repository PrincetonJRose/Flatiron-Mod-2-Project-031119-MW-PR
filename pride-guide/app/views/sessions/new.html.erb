<h1 align="center"><b><u>Login</u></b></h1>
<br>
<br>
<% if @errors %>
    <p align="center" style="color: red"><%= @errors %></p>
    <br>
<% end %>
<%= form_tag(login_path) do %>
  <p><%= label_tag "Enter email address:" %></p>
  <p><%= text_field_tag :email %></p>
  <p><%= label_tag("Password") %></p>
  <p><%= password_field_tag :password %></p>
  <br>
  <p><%= submit_tag("Login") %></p>

<% end %>
