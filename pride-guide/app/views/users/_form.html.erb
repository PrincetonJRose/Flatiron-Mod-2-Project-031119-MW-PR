<% if @user.errors.any? %>
    <div id="error_explanation">
    <h3 style="color: red">There were some errors with the info you entered into the form:</h2>
    <ul>
        <% @user.errors.full_messages.each do |message| %>
        <li><p style="color:red"><%= message %></p></li>
        <% end %>
    </ul>
    </div>
<% end %>


<%= form_for(@user) do |f| %>
    <p><%= f.label "Enter your user name:" %></p>
    <p><%= f.text_field :username %></p>
    <p><%= f.label "Enter your email address:" %></p>
    <p><%= f.text_field :email %></p>
    <p><%= f.label "Enter your password (must be between 6-16 characters long):" %></p>
    <%= f.password_field :password %>
    <p><%= f.label "Confirm your password:" %></p>
    <%= f.password_field :password_confirmation %>
    <p><%= f.label "Enter your birthday:" %></p>
    <p><%= f.date_select(:birthdate, order: [:month, :day, :year], use_month_numbers: false, prompt: { day: 'Select day:', month: 'Select month:', year: 'Select year:' }, start_year: Date.today.year - 120, end_year: Date.today.year) %></p>
    <p><%= f.label "Enter in your location (optional):" %></p>
    <p><%= f.text_field :location %></p>
    <p><%= f.label "Check the gender(s) that you associate with:" %></p>
    <p>
        <%= f.collection_check_boxes(:gender_ids, Gender.all, :id, :name) do |g| %>
            <%= g.check_box %>
            <%= g.label %>
            <br>
        <% end %>
    </p>
    <p><%= f.label "Check the pronoun(s) you prefer to go by:" %></p>
    <p>
        <%= f.collection_check_boxes(:pronoun_ids, Pronoun.all, :id, :name) do |g| %>
            <%= g.check_box %>
            <%= g.label %>
            <br>
        <% end %>
    </p>
        <p><%= f.label "Check the sexual orientation(s) that you prefer:" %></p>
    <p>
        <%= f.collection_check_boxes(:orientation_ids, Orientation.all, :id, :name) do |g| %>
            <%= g.check_box %>
            <%= g.label %>
            <br>
        <% end %>
    </p>
    <br>
    <p><%= f.label "Enter some quick information about yourself (optional):" %></p>
    <p><%= f.text_area :bio %></p>
    <br>
    <%= f.submit %>
<% end %>